{
  "name": "semilla-grammy-typescript",
  "version": "0.0.1",
  "description": "Semilla para implementar un bot de Telegram utilizando el framework grammY",
  "author": "Federico Aloi",
  "license": "MIT",
  "engines": {
    "node": ">= 16.13 <17"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "grammy": "^1.11.2",
    "tslib": "~2.4"
  },
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only src/main.ts",
    "server": "node build/src/main.js",
    "clean": "rimraf coverage build tmp",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --fix ./src",
    "lint:prettier": "prettier --write ./src",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "~29.1",
    "@types/node": "~16",
    "@typescript-eslint/eslint-plugin": "~5.39",
    "@typescript-eslint/parser": "~5.39",
    "eslint": "~8.24",
    "eslint-plugin-jest": "~27.1",
    "jest": "~29.1",
    "prettier": "~2.7",
    "rimraf": "~3.0",
    "ts-jest": "~29.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsutils": "~3.21",
    "typescript": "~4.8"
  }
}
